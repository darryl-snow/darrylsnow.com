.panel-intro
	overflow 			visible
	text-align 			center
	width 				100%
	width 				calc(100% - 10px)

	@media $lap
		width 			50%
		width 			calc(50% - 10px)

	@media $desk
		text-align 		left

.intro-avatar
	column(12)
	margin-bottom 		$base-spacing-unit
	text-align 			center			

	@media $desk
		column(4)

.intro-text
	column(12)
	overflow 			visible !important

	h1
		margin-top 		0

	@media $desk
		column(8)
		overflow 		visible !important

.intro-download-cv
	@extends 			.button--ghost
	@extends 			.button--small
	border-color 		$text-colour
	color 				$text-colour !important
	opacity 			0.7

	&:active,
	&:focus,
	&:hover
		background 		$text-colour
		color 			$white !important
		

.intro-social-buttons
	float 				left
	height 				$base-spacing-unit * 2
	margin-top 			$base-spacing-unit
	width 				100%

	.button
		@extends 		.button--flat
		@extends 		.button--square
		opacity 		0.7
		transition		$fast-transition * 0.5

		&:active,
		&:focus,
		&:hover
		&.active
			opacity 	1

	a
		line-height 	$base-spacing-unit * 2