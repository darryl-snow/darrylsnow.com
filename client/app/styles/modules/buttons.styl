.toggle-expand-button
	@extends 				.button--flat
	@extends				.button--plain
	color 					$text-colour
	display 				none
	opacity 				0.5
	padding 				0
	position 				absolute
	right 					$base-spacing-unit * 0.5
	top 					$base-spacing-unit * 0.5
	transition				$fast-transition
	z-index 				20

	&:active,
	&:focus,
	&:hover
		background 			none
		opacity 			1

	@media $lap
		display 			block