.loader:before,
.loader:after,
.loader
	animation					load 1.4s infinite ease-in-out
	animation-fill-mode 		both
	border-radius				100%
	height						2.5em
	transform 					translateZ(0)
	width						2.5em
	

.loader
	animation-delay 			0.16s
	font-size					10px
	margin						8em auto
	position					relative
	text-indent					-9999em
	

.loader:before
	left						-3.5em

.loader:after
	animation-delay				0.32s
	left						3.5em

.loader:before,
.loader:after
	content						''
	position					absolute
	top							0

@-webkit-keyframes load
	0%,
	80%,
	100%
		box-shadow				0 2.5em 0 -1.3em $blue

	40%
		box-shadow				0 2.5em 0 0 $blue

@keyframes load
	0%,
	80%,
	100%
		box-shadow				0 2.5em 0 -1.3em $blue

	40%
		box-shadow				0 2.5em 0 0 $blue