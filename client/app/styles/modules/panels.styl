.panel
	group()
	box-shadow 				0 0.2em 0.2em rgba(black, 0.1)
	//margin 					$base-spacing-unit
	//height					50px
	// overflow 				hidden
	margin-bottom 			$base-spacing-unit
	position 				relative
	transition 				$fast-transition
	//width					50px

	&--maximised
		width 				100% !important

.panel-front,
.panel-back
	group()
	float 					left
	width 					100%

.panel-front
	z-index 				2

.panel-back
	position 				absolute
	transition 				0.2s all linear
	width 					auto

.panel-back--bottom
	left 					0
	top 					100%
	transform				perspective(250px) rotateX(-90deg)
	transform-origin		50% 0%
	width					100%

.panel-back--right
	height 					100%
	left 					0
	transform				translateX(0%)
	transform-origin		0% 0%
	z-index 				-1

.flipdown
	.panel-back--bottom
		transform			perspective(350px) rotateX(0deg)
		transition			0.2s linear 0s

.flipright
	.panel-back--right
		transform			translateX(100%)
		transition			0.2s linear 0s


