body
	-webkit-font-smoothing	subpixel-antialiased
	color 					$text-colour
	font-kerning			auto
	font-smooth				always
	font-weight				300
	letter-spacing 			0.5px
	text-rendering			optimizeLegibility

a:not(.button),
a:not(.button):visited
	color 					$blue
	transition 				0.3s all ease-in-out

	&:active,
	&:focus,
	&:hover
		color 				darken(@color, 20%)
		text-decoration 	none

p
	line-height 			1.625

h1,
h2,
h3,
h4,
h5,
h6
	font-weight				300

.bold
	font-weight 			700

.caps
	text-transform 			uppercase

.small
	font-size 				0.7em

.centred
	text-align 				center

.subheading
	@extends				.small

.highlight
	background 				lighten($black, 98%)
	border 					1px solid lighten($black, 90%)
	border-radius 			0.3em
	display 				inline-block
	margin 					0.3em
	padding 				0.3em

.unstyled-list
	list-style 				none
	margin 					0
	padding 				0