					a.tooltip(aria-describedby="tooltip3") Back-end Development
						span#tooltip3.tooltip-content(role="tooltip")
							span.tooltip-text
								span.tooltip-inner JavaScript, Ruby, PHP, Python
				li
					a.tooltip(aria-describedby="tooltip4") Mobile Apps
						span#tooltip4.tooltip-content(role="tooltip")
							span.tooltip-text
								span.tooltip-inner Web-based iOS/Android apps
				li
					a.tooltip(aria-describedby="tooltip5") Responsive Design
						span#tooltip5.tooltip-content(role="tooltip")
							span.tooltip-text
								span.tooltip-inner Device-agnostic websites and apps
				li
					a.tooltip(aria-describedby="tooltip6") Testing
						span#tooltip6.tooltip-content(role="tooltip")
							span.tooltip-text
								span.tooltip-inner QA, Usability, Accessibility, SEO
				li
					a.tooltip(aria-describedby="tooltip7") Project Management
						span#tooltip7.tooltip-content(role="tooltip")
							span.tooltip-text
								span.tooltip-inner Agile planning and overseeing design, development, and testing
				li
					a.tooltip(aria-describedby="tooltip8") Consultancy
						span#tooltip8.tooltip-content(role="tooltip")
							span.tooltip-text
								span.tooltip-inner Critiques, Suggestions &amp; recommendations
				li
					a.tooltip(aria-describedby="tooltip9") Workshops
						span#tooltip9.tooltip-content(role="tooltip")
							span.tooltip-text
								span.tooltip-inner Technical training
				li
					a.tooltip(aria-describedby="tooltip10") Wordpress
						span#tooltip10.tooltip-content(role="tooltip")
							span.tooltip-text
								span.tooltip-inner CMS integration, Custom theme development
				li
					a.tooltip(aria-describedby="tooltip11") AngularJS
						span#tooltip11.tooltip-content(role="tooltip")
							span.tooltip-text
								span.tooltip-inner Scalable, data-driven web apps
				li
					a.tooltip(aria-describedby="tooltip12") Dev Ops
						span#tooltip12.tooltip-content(role="tooltip")
							span.tooltip-text
								span.tooltip-inner Server setup, Environment management, Continuous integration
				li
					a.tooltip(aria-describedby="tooltip13") NodeJS
						span#tooltip13.tooltip-content(role="tooltip")
							span.tooltip-text
								span.tooltip-inner APIs using ExpressJS

		aside.work-right.slide-in-right-2

			.component(role="note")
				.component-content
					.calendar
						.calendar-day
						.calendar-date
						.calendar-monthandyear

			.component(role="note")
				.component-content
					.availability
						.loading
							ul.loading-spinner
								li
								li
								li
								li
							.loading-content
								h3 Today I am:
								.availability-activity working on Diageo Horizon
								a.link(href="mailto:darryl@yourweb.expert", title="Email me") Ask about my availability

			.component(role="note", itemprop="offers", itemscope itemtype="http://schema.org/Offer")
				.component-content
					.rates
						h3 My Weekly Rate
						.rates-number
							small.rates-number-currency(itemprop="priceCurrency", content="$") usd
							span.rates-number-rate(itemprop="price", content="2400.00") $2,400
							meta(itemprop="PriceSpecification", content="weekly rate")
							meta(itemprop="category", content="Software")
						.rates-conversions
							.loading
								ul.loading-spinner
									li
									li
									li
									li
								.loading-content
									ul.icon-list.icon-list--cobalt
										li
											a.js-convert-currency.active(data-currency="USD", title="Convert rate to USD")
												svg.icon(viewBox="0 0 32 32")
													use(xlink:href="#icon-dollar")
										li
											a.js-convert-currency(data-currency="EUR", title="Convert rate to EUR")
												svg.icon(viewBox="0 0 32 32")
													use(xlink:href="#icon-euro")
										li
											a.js-convert-currency(data-currency="GBP", title="Convert rate to GBP")
												svg.icon(viewBox="0 0 32 32")
													use(xlink:href="#icon-gbp")
										li
											a.js-convert-currency(data-currency="CNY", title="Convert rate to CNY")
												svg.icon(viewBox="0 0 32 32")
													use(xlink:href="#icon-cny")
						a.link(href="mailto:darryl@yourweb.expert", title="Email me") Ask about my rates

			.component(role="note")
				.component-content
					.clients
						h3 Some of my clients
						ul.carousel
							li.carousel-item
								svg.icon(viewBox="0 0 32 32")
									use(xlink:href="#icon-apple")
							li.carousel-item
								svg.icon(viewBox="0 0 60 32")
									use(xlink:href="#cctv")
							li.carousel-item
								svg.icon(viewBox="0 0 60 32")
									use(xlink:href="#diageo")
							li.carousel-item
								svg.icon(viewBox="0 0 32 32")
									use(xlink:href="#unionpay")

