	font-family					"Raleway"
	font-style					normal
	font-weight					200
	src							local("Raleway ExtraLight"), local("Raleway-ExtraLight"), url(http://fonts.gstatic.com/s/raleway/v9/8KhZd3VQBtXTAznvKjw-kwsYbbCjybiHxArTLjt7FRU.woff2) format("woff2")
	unicode-range				U+0000-00FF, U+0131, U+0152-0153, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2212, U+2215, U+E0FF, U+EFFD, U+F000

@font-face
	font-family					"Raleway"
	font-style					normal
	font-weight					500
	src							local("Raleway Medium"), local("Raleway-Medium"), url(http://fonts.gstatic.com/s/raleway/v9/CcKI4k9un7TZVWzRVT-T8wsYbbCjybiHxArTLjt7FRU.woff2) format("woff2")
