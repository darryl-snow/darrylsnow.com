.blog-left,
.blog-right
	@extends			.left
	width				100%
	
.blog-left
	@media (min-width:60em)
		width			50%

	@media (min-width:100em)
		width			70%

.blog-right
	@media (min-width:60em)
		width			50%

	@media (min-width:100em)
		width			30%

.blog-post
	line-height			1.67
	height				35em
	margin				0 auto 1em
	max-width			40em
	overflow			hidden
	position			relative
	
	p,
	ul
		opacity			0.8
		
	&:after
		background		linear-gradient(to bottom,  rgba($black, 0) 0%,$black 90%)
		bottom			0
		content			""
		display			block
		height			10em
		left			0
		position		absolute
		width			100%
		
	&+ .align--centre
		margin			0 auto
		max-width		40em