.slide-in
	group()
	overflow				hidden

	&-left-1,
	&-left-2,
	&-left-3,
	&-left-4,
	&-right-1,
	&-right-2,
	&-right-3,
	&-right-4
		opacity				0
		transition			all 1s cubic-bezier(0.000, 0.045, 0.000, 0.995)

	&-left-1,
	&-left-2,
	&-left-3,
	&-left-4
		transform			translateX(-999em)
		
	&-right-1,
	&-right-2,
	&-right-3,
	&-right-4
		transform			translateX(999em)

	&-left-1,
	&-right-1
		transition-delay	0

	&-left-2,
	&-right-2
		transition-delay	0.2s

	&-left-3,
	&-right-3
		transition-delay	0.4s

	&-left-4,
	&-right-4
		transition-delay	0.6s

	&.seen

		.slide-in-left-1,
		.slide-in-left-2,
		.slide-in-left-3,
		.slide-in-left-4,
		.slide-in-right-1,
		.slide-in-right-2,
		.slide-in-right-3,
		.slide-in-right-4
			opacity			1
			transform		translateX(0)