.carousel
	unstyled-list()
	position			relative
	
.carousel-item
	background			rgba($black, 0.1)
	border-radius		1em
	color				$white
	display				block
	font-weight			500
	left				50%
	line-height			1.67
	opacity				0
	padding				1em
	position			absolute
	top					0
	transform			scale(0.5) translateX(-100%)
	transition			all 0.1s ease-in
	visibility			hidden
	
	&.show
		opacity			1
		transform		scale(1) translateX(-50%)
		visibility		visible
		transition		all 0.3s ease-out
		
.pagination
	inline-list()
	unstyled-list()
	cursor						default
	display						inline-block
	list-style					none
	margin						0 0 1em
	padding						0.2em
	position					relative
	-webkit-touch-callout		none
	-webkit-user-select			none
	
	&-item
		cursor			pointer
		display			block
		float			left
		height			16px
		margin			0 16px
		position		relative
		width			16px
		
		&.current
			a:after
				transform		scale(1)
		
	a
		background		transparent
		box-shadow		inset 0 0 0 2px $white
		border-radius	50%
		cursor			pointer
		height			100%
		left			0
		outline			none
		position		absolute
		text-indent		-999em
		top				0
		transition		opacity 0.3s ease
		width			100%
			
		&:after
			background-color	$white
			border-radius		50%
			content				""
			height				100%
			left				0
			position			absolute
			transform			scale(0)
			transform-origin	50% 50%
			transition			transform 0.3s ease
			width				100%
		
		&:hover
			opacity				0.7