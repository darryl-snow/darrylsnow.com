.button
	background			none
	border				3px solid $white
	border-radius		3em
	color				$white
	cursor				pointer
	display				inline-block
	font-family			inherit
	font-size			inherit
	font-weight			800
	letter-spacing		1px
	margin				1em 2em
	outline				none
	overflow			hidden
	padding				1.6em 5em
	position			relative
	text-decoration		none
	text-transform		uppercase
	transition			all 0.3s
	vertical-align		middle
	
	svg
		color			$white
		height			32px
		margin-top		-16px
		position		absolute
		right			-30%
		top				50%
		transition		all 0.3s
		width			32px
		
	+ActiveFocusHover()
		svg
			right		15px
			
	&-small
		margin			0.5em 1em
		padding			0.8em 2.5em
		
		svg
			height		20px
			margin-top	-10px
			width		20px
			
	&-extrasmall
		border			2px solid $white
		font-size		0.85em
		margin			0
		padding			0.4em 2.5em
		
		svg
			height		16px
			margin-top	-8px
			width		16px
			
	&-icon
		border			none
		border-radius	0
		display			block
		height			32px
		margin			0
		opacity			0.5
		padding			0
		position		absolute
		right			1em
		top				1em
		width			32px
		
		svg
			margin		0
			position	relative
			right		auto
			top			auto
			
		+ActiveFocusHover()
			opacity		1

			svg
				right	auto
				
	&--centred
		display			block
		margin			1em auto
		
	&-login
		opacity			0.7
		position		absolute
		right			0.8em
		top				0.8em
		z-index			getZIndex("loginButton")

		+ActiveFocusHover()
			opacity		1