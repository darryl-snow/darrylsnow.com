.tooltip
	border-bottom	2px dashed rgba($white, 0.6)
	cursor			help
	display			inline-block
	margin			0 0.2em
	position		relative
	z-index			getZIndex("tooltip")
		
	&:hover
		
		.tooltip-content
			opacity				1
			pointer-events		auto
			transition-delay	0s

		.tooltip-text
			transform			scale3d(1,1,1)
			transition-delay	0s
			
		.tooltip-inner
			transform			translate3d(0,0,0)
			transition-delay	0.3s

.tooltip-content
	background		transparent
	bottom			100%
	cursor			default
	display			block
	left			50%
	margin			0 0 0 -150px
	opacity			0
	padding			1em
	pointer-events	none
	position		absolute
	text-align		center
	transition		opacity 0.3s 0.3s
	width			300px
	z-index			getZIndex("tooltipContent")

	&:after
		border				solid transparent
		border-color		transparent
		border-top-color	$white
		border-width		10px
		bottom				0
		content				""
		display				block
		height				0
		left				50%
		margin-left			-10px
		pointer-events		none
		position			absolute
		width				0

.tooltip-text
	border-bottom	10px solid $white
	color			$white
	display			block
	font-size		1.5em
	font-weight		200
	overflow		hidden
	text-transform	none
	transform		scale3d(0,1,1)
	transition		transform 0.3s 0.3s

.tooltip-inner
	background		rgba($black,0.95)
	display			block
	padding			40px
	transform		translate3d(0,100%,0)
	transition		transform 0.3s