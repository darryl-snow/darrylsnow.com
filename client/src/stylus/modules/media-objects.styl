.media
	group()
	
.media-image,
.media-content
	position			relative
	text-align			center
	
	@media (min-width: 60em)
		text-align		left

.media-image
	@extends			.left
	margin				0 0 3em 0
	width				100%
	
	@media (min-width: 60em)
		margin			0 3% 0 0
		width			20%
	
.media-content
	@extends			.left
	width				100%
	
	h1
		margin-top		0
		
	@media (min-width: 60em)
		width			77%