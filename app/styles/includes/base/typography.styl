body
	-webkit-font-smoothing	subpixel-antialiased
	color 					$text-colour
	font-kerning			auto
	font-smooth				always
	font-weight				300
	letter-spacing 			0.5px
	text-rendering			optimizeLegibility

h1,
h2,
h3,
h4,
h5,
h6
	font-weight				300

.bold
	font-weight 			700

.caps
	text-transform 			uppercase

.small
	font-size 				0.7em

.subheading
	@extends				.small