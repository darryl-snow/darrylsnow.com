html
	background 			url("../images/background.svg")
	background-size		cover
	height 				100%
	width 				100%

*
	box-sizing			border-box
	position 			relative

.padded-box
	padding				$base-spacing-unit

.section--maximised
	bottom				$base-spacing-unit * 0.5
	float				none !important
	height				auto !important
	left				$base-spacing-unit * 0.5
	margin				0 !important
	position			absolute
	right				$base-spacing-unit * 0.5
	transition			$fast-transition
	top					$base-spacing-unit * 0.5
	width				auto !important

	.panel
		margin 			0 !important
		transition		$fast-transition

	@media $lap
		bottom 			$base-spacing-unit
		left 			$base-spacing-unit
		right 			$base-spacing-unit
		top 			$base-spacing-unit

.intro
	column(12)
	offset(0)
	group()
	overflow 			visible

	@media $lap
		column(8)
		offset(2)
		group()
		overflow 		visible

.intro-avatar
	column(4)

.intro-text
	column(8)

	h1
		margin-top 		0

.intro-social-buttons
	float 				left
	height 				$base-spacing-unit * 2
	margin-top 			$base-spacing-unit
	width 				100%

	.button
		opacity 		0.7
		transition		$fast-transition * 0.5

		&:active,
		&:focus,
		&:hover
		&.active
			opacity 	1